#!/usr/bin/python3

# This is a script to alias common Archlinux commands, so that I don't have to
# learn syntax for *another* package manager

import sys
import os

#add conditional to check for the existance of yaourt

package_names = " ".join(sys.argv[2:])
pacmanager = 'yaourt'

command = {'install': pacmanager + ' -S ' + package_names, 
           'installed': pacmanager + ' -Q',
           'installed_AUR': pacmanager + ' -Qem',
           'update': pacmanager + ' -Syu',
           'autoremove': 'pacman -Rsn $(pacman -Qdtq)', #check if this works with yaourt
           'search': 'yaourt -Ss ' + package_names,
           'info': 'yaourt -Si ' + package_names,
           'orphans': 'yaourt -Qdt',
           'remove': pacmanager + ' -R ' + package_names,
           'purge': pacmanager + ' -Rs ' + package_names
          }

#update aur packages: yaourt -Syu --aur

if len(sys.argv) == 1:
    print("Commands: ", " ".join(sorted(command.keys())))

else:
    if sys.argv[1] in command.keys():
        cmdstring = command[sys.argv[1]]
        #os.system(cmdstring)
        print("Issued Command: ", cmdstring)
    else:
        print("I don't know how to do that")
