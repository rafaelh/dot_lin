#!/bin/bash

if [ $# == 0 ] ; then
    echo "Usage: getsite [domain name] [URL]"
    exit 1;
fi

wget                              \
    --recursive                   \
    --no-clobber                  \
    --page-requisites             \
    --html-extension              \
    --convert-links               \
    --restrict-file-names=windows \
    --domains $1                  \
    --no-parent                   \
    $2
