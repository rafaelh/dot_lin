#!/usr/bin/env python3
import os

def gitupdate( dir ):
    workingdir = os.getenv("HOME") + dir
    repos = os.listdir(workingdir)

    print("\nUpdating Repositories in %s" % workingdir)

    for repo in repos:
        print("\n\033[1;32;00m>>> \033[1;37;00mUpdating: %s\033[0;37;00m" % repo)
        cmdstring = "git -C %s%s pull" % (workingdir, repo)
        os.system(cmdstring)
    return;

gitupdate('/gitrepos/')
gitupdate('/.vim/bundle/')
print ("")
