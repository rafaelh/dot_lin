#!/usr/bin/env python
import os

# Set repo directory, and find its contents
gitsubdir = '/gitrepos/'
gitdir = os.getenv("HOME") + gitsubdir
repos = os.listdir(gitdir)

print "Updating Repositories in %s" % gitdir

# Update each one
for repo in repos:
    print '\033[1;32;40m>>> \033[1;37;40mUpdating: %s\033[0;37;40m' % repo
    cmdstring = "git pull %s%s" % (gitdir, repo)
    os.system(cmdstring)
