#!/usr/bin/env python
import os
import sys

def gitupdate( dir ):
    workingdir = os.getenv("HOME") + dir
    repos = os.listdir(workingdir)

    print "\nUpdating Repositories in %s" % workingdir

    for repo in repos:
        print "\n\033[1;32;40m>>> \033[1;37;40mUpdating: %s\033[0;37;40m" % repo
        cmdstring = "git -C %s%s pull" % (workingdir, repo)
        os.system(cmdstring)
    return;

#opts = sys.argv[1:]
#print opts

gitupdate('/gitrepos/')
gitupdate('/.vim/bundle/')
print ""


# Setup
# Check if gitrepos exists. If not, create it, and create a dot_lin symlink
# check if each of these directories has contents. If not, clone it
