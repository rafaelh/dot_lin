rsync -avz --delete -e 'ssh ' rafael@192.168.0.38:/raid/Documents /mnt/d/Backup/

echo ">>> Backing up Movies"
rsync -avz --delete -e 'ssh ' rafael@192.168.0.38:/raid/Movies /mnt/d/Backup/
