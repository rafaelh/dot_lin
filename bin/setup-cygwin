#!/bin/bash

echo ">>> Installing Admin packages..."
apt-cyg install attr shutdown 

echo ">>> Installing Archive packages..."
apt-cyg install bsdcat bsdcpio bsdtar bzip2 cabextract p7zip sharutils > /dev/null

echo ">>> Installing Development packages..."
apt-cyg install autobuild autoconf automake binutils bison boost-build clang cmake colorgcc diffstat gcc-core gcc-g++ git git-clang-format make patch patchutils pkg-config pylint > /dev/null

echo ">>> Installing Editor packages..."
apt-cyg install hexedit nano vim vim-clang-format xxd > /dev/null

echo ">>> Installing Net packages..."
apt-cyg install bind-utils ca-certificates curl lftp nc nc6 openssh openssl ping rsync whois wget > /dev/null

echo ">>> Installing Python packages..."
apt-cyg install python3 python3-pip python3-setuptools > /dev/null

echo ">>> Installing Util packages..."
apt-cyg install dateutils dos2unix diffutils gnupg2 most less nosleep screen time tmux tree tzcode > /dev/null

echo ">>> Installing Misc packages..."
apt-cyg install typespeed pwgen bash-completion > /dev/null
